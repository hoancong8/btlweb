@model IEnumerable<BTL.Models.Service>

@{
    // 1. Lấy dữ liệu tiêu đề từ Controller
    var categoryName = ViewData["CategoryName"] as string;
    var keyword = ViewBag.Keyword as string;
    var pageTitle = "";

    // 2. Tạo tiêu đề động
    if (!string.IsNullOrEmpty(keyword))
    {
        pageTitle = $"Kết quả tìm kiếm cho: \"{keyword}\"";
        if (!string.IsNullOrEmpty(categoryName))
        {
            pageTitle += $" trong danh mục \"{categoryName}\"";
        }
    }
    else if (!string.IsNullOrEmpty(categoryName))
    {
        pageTitle = $"Dịch vụ thuộc danh mục: \"{categoryName}\"";
    }
    else
    {
        pageTitle = "Tất cả dịch vụ";
    }

    ViewData["Title"] = pageTitle;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@pageTitle</h2>
    <hr />

    @if (!Model.Any())
    {
        // 3. Xử lý trường hợp không tìm thấy kết quả (từ Snippet 2)
        <p class="text-muted text-center mt-3">Không tìm thấy dịch vụ nào phù hợp.</p>
    }
    else
    {
        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-12 col-sm-6 col-md-3 mb-4">
                    <div class="card shadow-sm h-100">
                        <img src="@service.ImageUrl" class="card-img-top" alt="@service.ItemName" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@service.ItemName</h5>
                            
                            <p class="card-text">@service.Description</p>
                            <p class="card-text small"><i class="fas fa-map-marker-alt"></i> @service.Address</p>
                            
                            <p class="card-text">
                                <strong>Đánh giá:</strong> 
                                @(service.AvgRating?.ToString("F1") ?? "Chưa có") ⭐
                            </p>
                            
                            <a href="@Url.Action("Details", "Service", new { id = service.ItemId })" class="btn btn-primary mt-auto">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>