    @model BTL.Models.ViewModels.ReviewViewModel
    @{
        ViewData["Title"] = "Viết đánh giá";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 bg-white p-4 rounded-4 shadow-lg">
                <h3 class="text-center mb-4">Chia sẻ trải nghiệm của bạn</h3>

                <form asp-action="Create" method="post" enctype="multipart/form-data" id="reviewForm">
                    @Html.AntiForgeryToken()

                    <!-- Chọn dịch vụ -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Dịch vụ</label>
                        <select asp-for="SelectedServiceID" class="form-control">
                            <option value="">Chọn dịch vụ...</option>
                            @foreach (var s in Model.Services)
                            {
                                <option value="@s.ItemID">@s.ItemName</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedServiceID" class="text-danger"></span>
                    </div>

                    <!-- Đánh giá sao -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Đánh giá sao</label>
                        <div class="stars">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <input type="radio" id="star-@i" name="Rating" value="@i" />
                                <label for="star-@i"><i class="bi bi-star-fill"></i></label>
                            }
                        </div>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <!-- Tiêu đề -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" placeholder="Viết tiêu đề..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Nội dung -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nội dung</label>
                        <textarea asp-for="Content" class="form-control" rows="4" placeholder="Chia sẻ trải nghiệm..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <!-- Ảnh -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Hình ảnh</label>
                        <input type="file" name="imageFile" class="form-control" />
                    </div>

                    <!-- VerifyKey -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mã xác thực (VerifyKey)</label>
                        <input asp-for="VerifyKey" class="form-control" placeholder="VD: 1AB23CD45E" />
                        <span asp-validation-for="VerifyKey" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/" class="btn btn-secondary">Hủy</a>
                        <button type="submit" class="btn btn-danger">Đăng tải</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- CSS -->
    <style>
        .stars label {
            font-size: 1.5rem;
            color: #ccc;
            cursor: pointer;
        }

        input[type="radio"]:checked ~ label i {
            color: gold;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn {
            border-radius: 10px;
            font-weight: 600;
            padding: 8px 15px;
        }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>

    <!-- Scripts -->
    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    }
