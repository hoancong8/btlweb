<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HaNoiShare</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <style>
        .footer {
            
            background-color: #000;
            color: #fff;
            
        }
        body{
            margin:0;
        }
        /* ===== NAVBAR ===== */
        .navbar-custom {
            background-color: #000;
            color: white;
            padding: 0.6rem 3rem;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.3rem;
            color: white !important;
        }

            .navbar-brand span {
                color: #ff4d4d;
            }

        .navbar-nav .nav-link {
            color: #fff !important;
            font-weight: 500;
            margin-right: 1rem;
        }

            .navbar-nav .nav-link:hover {
                color: #ff4d4d !important;
            }

        /* Search box (desktop) */
        .search-box {
            position: relative;
            max-width: 240px;
        }

            .search-box input {
                border-radius: 20px;
                padding-right: 35px;
            }

            .search-box button {
                position: absolute;
                right: 8px;
                top: 50%;
                transform: translateY(-50%);
                border: none;
                background: none;
                color: #555;
            }

        /* Ẩn/hiện theo kích thước màn hình */
        @@media (max-width: 992px) {
            /* Ẩn thanh tìm kiếm desktop khi thu nhỏ */
            .search-box

        {
            display: none !important;
        }

        /* Ẩn icon person khi mobile */
        .icon-btn {
            display: none !important;
        }

        /* Hiện các mục mobile */
        .mobile-search-item,
        .mobile-login-item {
            display: block !important;
        }

        }

        /* Mặc định ẩn các mục mobile */
        .mobile-search-item,
        .mobile-login-item {
            display: none;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <h2>HaNoi<span>Share</span></h2>
                </a>

                <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0" style="margin-left:50px">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">Liên hệ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="About" asp-action="Index">Giới thiệu</a>
                        </li>

                        <!-- Mục “Tìm kiếm” chỉ hiện trên mobile -->
                        <li class="nav-item mobile-search-item">
                            <a class="nav-link text-danger fw-semibold" asp-controller="Service" asp-action="Index">
                                Tìm kiếm
                            </a>
                        </li>
                        <li>
							<a class="nav-link" asp-controller="Create" asp-action="Create">Đăng bài</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link position-relative" href="#" id="notiDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bell fs-5"></i>
                                <span id="notiCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="notiDropdown" style="width: 320px;">
                                <li class="dropdown-header fw-bold">Thông báo</li>
                                    <div id="notiList">
                                        <li class="text-center text-muted small p-2">Đang tải...</li>
                                    </div>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-center" asp-controller="Noti" asp-action="Index">Xem tất cả</a></li>
                            </ul>
                        </li>

                        <!-- Mục “Đăng nhập” chỉ hiện trên mobile -->
                        <li class="nav-item mobile-login-item">
                            <a class="nav-link text-danger fw-semibold" asp-controller="User" asp-action="Login">
                                Đăng nhập
                            </a>
                        </li>
                    </ul>

                    <!-- Thanh tìm kiếm (chỉ desktop) -->
                    <form class="d-flex search-box" asp-controller="Service" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" name="keyword"
                               placeholder="Tìm kiếm dịch vụ..." value="@Context.Request.Query["keyword"]" />
                        <button type="submit"><i class="bi bi-search"></i></button>
                    </form>

                    <!-- Login icon (chỉ desktop) -->
                    @{
                        var userName = Context.Session.GetString("UserName");
                    }

                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <!-- Nếu đã đăng nhập -->
                        <span class="icon-btn ms-3 text-white">
                            <i class="bi bi-person text-white"></i>
                            Xin chào, @userName!
                        </span>
                    }
                    else
                    {
                        <!-- Nếu chưa đăng nhập -->
                        <a class="icon-btn ms-3" asp-controller="User" asp-action="Login">
                            <i class="bi bi-person text-white"></i>
                        </a>
                        <span class="icon-btn ms-2 text-white">Đăng nhập</span>
                    }

                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted py-3" style="background-color:#000">
        <div class="container text-center ">
            <div class="row gy-2 " >
                <!-- Cột 1: Logo -->
                <div class="col-12 col-md-3">
                    <h4 class="fw-bold mb-2 text-white">HaNoi<span class="text-danger">Share</span></h4>
                    <p class="text-secondary small mb-1">96A Định Công,<br />Hoàng Mai, Hà Nội.</p>
                    <p class="text-secondary small mb-1">hanoishare@gmail.com</p>
                    <p class="text-secondary small mb-0">+84 435-5535-888</p>
                </div>

                <!-- Cột 2: Tài khoản -->
                <div class="col-6 col-md-2">
                    <h6 class="fw-semibold mb-2">Tài khoản</h6>
                    <ul class="list-unstyled text-secondary small mb-0">
                        <li><a href="#" class="text-decoration-none text-secondary">Tài khoản của tôi</a></li>
                        <li><a href="#" class="text-decoration-none text-secondary">Đăng nhập / Đăng ký</a></li>
                        <li><a href="#" class="text-decoration-none text-secondary">Danh mục</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Liên kết -->
                <div class="col-6 col-md-2">
                    <h6 class="fw-semibold mb-2">Liên kết</h6>
                    <ul class="list-unstyled text-secondary small mb-0">
                        <li><a href="#" class="text-decoration-none text-secondary">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-decoration-none text-secondary">Điều khoản sử dụng</a></li>
                        <li><a href="#" class="text-decoration-none text-secondary">Liên hệ</a></li>
                    </ul>
                </div>

                <!-- Cột 4: Ứng dụng & MXH -->
                <div class="col-12 col-md-5 text-md-end mt-3 mt-md-0">
                    <h6 class="fw-semibold mb-2">Tải xuống</h6>
                    <div class="d-flex justify-content-md-end justify-content-start align-items-center mb-2">
                        <img src="~/uploads/icons/qr.png" alt="QR Code" width="70" class="me-2">
                        <div>
                            <a href="#"><img src="~/uploads/icons/googleplay.png" width="110" class="mb-1" /></a><br />
                            <a href="#"><img src="~/uploads/icons/appstore.png" width="110" /></a>
                        </div>
                    </div>
                    <div class="social-icons mt-2">
                        <a href="#" class="text-secondary me-2"><i class="bi bi-facebook fs-6"></i></a>
                        <a href="#" class="text-secondary me-2"><i class="bi bi-twitter fs-6"></i></a>
                        <a href="#" class="text-secondary me-2"><i class="bi bi-instagram fs-6"></i></a>
                        <a href="#" class="text-secondary"><i class="bi bi-linkedin fs-6"></i></a>
                    </div>
                </div>
            </div>

            <hr class="border-secondary my-3" />

            <div class="text-center text-secondary small">
                © 2025 - HaNoiShare. All rights reserved.
            </div>
        </div>
    </footer>

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.querySelectorAll('form[action*="Service"]').forEach(form => {
            form.addEventListener('submit', e => {
                const input = form.querySelector('input[name="keyword"]');
                if (!input.value.trim()) {
                    e.preventDefault();
                    alert("Vui lòng nhập từ khóa tìm kiếm!");
                }
            });
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function loadNotiCount() {
            $.ajax({
                url: '/Noti/Count',
                type: 'GET',
                success: function (data) {
                    $('#notiCount').text(data.count);
                    if (data.count === 0) {
                        $('#notiCount').hide();
                    } else {
                        $('#notiCount').show();
                    }
                },
                error: function () {
                    console.log("Không thể tải số lượng thông báo");
                }
            });
        }

        $(document).ready(function () {
            loadNotiCount();
            // Có thể tự động cập nhật mỗi 30 giây
            setInterval(loadNotiCount, 30000);
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const notiList = document.getElementById("notiList");
            const notiCount = document.getElementById("notiCount");

            // Load danh sách thông báo
            document.getElementById("notiDropdown").addEventListener("click", function () {
                fetch("/Noti/GetLatest")
                    .then(res => res.json())
                    .then(data => {
                        notiList.innerHTML = "";
                        if (data.length === 0) {
                            notiList.innerHTML = `<li class="text-center text-muted small p-2">Không có thông báo mới</li>`;
                            notiCount.textContent = "0";
                        } else {
                            data.forEach(n => {
                                notiList.innerHTML += `
                                    <li>
                                        <a class="dropdown-item small ${n.isRead ? '' : 'fw-bold'}" href="#">
                                            ${n.message}<br/>
                                            <span class="text-muted" style="font-size: 0.8em;">${n.createAt}</span>
                                        </a>
                                    </li>`;
                            });
                            notiCount.textContent = data.filter(n => !n.isRead).length;
                        }
                    })
                    .catch(err => {
                        notiList.innerHTML = `<li class="text-danger small p-2 text-center">Lỗi tải dữ liệu</li>`;
                    });
            });
        });
    </script>
</body>
</html>
