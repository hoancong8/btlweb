@model BTL.Models.User
@{
    ViewData["Title"] = "Trang cá nhân";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-3 text-center">
                <img src="@Model.AvatarUrl" class="rounded-circle img-fluid mb-3" alt="Avatar" width="150" />
                <input type="file" name="AvatarUrl" class="form-control" />
            </div>

            <div class="col-md-9">
                <div class="mb-3">
                    <label>Họ tên</label>
                    <input type="text" class="form-control" name="FullName" value="@Model.FullName" required />
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <input type="email" class="form-control" name="Email" value="@Model.Email" required />
                </div>

                <div class="mb-3">
                    <label>Mật khẩu mới (nếu muốn đổi)</label>
                    <input type="password" class="form-control" name="PasswordHash" />
                </div>

                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </div>
    </form>
</div>
