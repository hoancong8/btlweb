@model BTL.Models.User
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="register-box bg-white p-4 rounded-4 shadow-lg" style="width: 100%; max-width: 420px;">
        <h3 class="text-center mb-4 fw-bold text-dark">Đăng ký tài khoản</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label fw-semibold">Tên đăng nhập</label>
                <input asp-for="UserName" class="form-control" placeholder="Nhập tên đăng nhập..." />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold">Họ và tên</label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên..." />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label fw-semibold">Mật khẩu</label>
                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
                <span asp-validation-for="PasswordHash" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-danger w-100 py-2 fw-semibold">Đăng ký</button>
        </form>
        <div class="text-center mt-3">
            <a asp-controller="User" asp-action="Login" class="text-decoration-none text-danger fw-semibold">
                Đã có tài khoản? Đăng nhập
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    body {
        background-color: #f8f9fa;
    }

    .register-box {
        background: #fff;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        border-radius: 15px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

        .register-box:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

    .form-control {
        border-radius: 10px;
        padding: 10px 12px;
    }

    .btn-danger {
        border-radius: 10px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-danger:hover {
            background-color: #e63946;
        }
</style>
