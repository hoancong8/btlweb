@model BTL.Models.User
@{
    ViewData["Title"] = "Trang cá nhân";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <!-- Hiển thị thông báo thành công nếu có -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <!-- Hiển thị avatar người dùng -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="@Model.AvatarUrl" class="img-fluid rounded-circle" alt="Avatar" width="150" />
                    <div class="mt-3">
                        <input type="file" name="AvatarUrl" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <!-- Hiển thị thông tin người dùng -->
                <div class="form-group">
                    <label for="FullName">Họ tên:</label>
                    <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" required />
                </div>

                <div class="form-group mt-3">
                    <label for="Email">Email:</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                </div>

                <div class="form-group mt-3">
                    <label for="PasswordHash">Mật khẩu mới (Nếu muốn thay đổi):</label>
                    <input type="password" class="form-control" id="PasswordHash" name="PasswordHash" />
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </div>
            </div>
        </div>
    </form>
</div>
