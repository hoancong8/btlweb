@model BTL.Models.Service

<div class="modal-header bg-danger text-white">
    <h5 class="modal-title">Xóa Dịch vụ</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <form id="formDeleteService"
          asp-action="DeleteConfirmed"
          asp-controller="ServiceAdmin"
          asp-area="Admin"
          method="post">

        <input type="hidden" asp-for="ItemID" />

        <div class="text-center mb-3">
            <p class="fw-semibold text-danger">
                Bạn có chắc chắn muốn xóa dịch vụ sau không?
            </p>
        </div>

        <div class="d-flex align-items-center justify-content-center flex-column text-center">
            <img src="@($"{Model.ImageUrl}")"
                 alt="@Model.ItemName"
                 style="width:120px;height:120px;object-fit:cover;border-radius:10px;border:1px solid #ccc;margin-bottom:10px;" />

            <h5 class="fw-bold text-dark">@Model.ItemName</h5>
            <p class="text-muted mb-1">
                Danh mục: @(Model.Category?.CategoryName ?? "Không xác định")
            </p>
            <p class="text-muted small">Địa chỉ: @Model.Address</p>
        </div>

        <div class="alert alert-warning mt-3">
            <i class="bi bi-exclamation-triangle-fill"></i>
            Hành động này không thể hoàn tác sau khi thực hiện.
        </div>

        <div class="modal-footer justify-content-center">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
            <button type="submit" class="btn btn-danger">Xác nhận Xóa</button>
        </div>
    </form>
</div>
