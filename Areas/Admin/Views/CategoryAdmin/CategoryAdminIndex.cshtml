@model IEnumerable<BTL.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">Quản lý Danh mục</h2>
        <button class="btn btn-success" id="btnAddCategory">
            <i class="bi bi-plus-circle"></i> Thêm danh mục
        </button>
    </div>

    <table class="table table-bordered table-hover align-middle shadow-sm">
        <thead class="table-success text-center">
            <tr>
                <th>Tên danh mục</th>
                <th>Mô tả</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.CategoryName</td>
                    <td>@c.Description</td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-primary btn-edit" data-id="@c.CategoryID">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-danger btn-delete" data-id="@c.CategoryID">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/category-admin.js" asp-append-version="true"></script>
}
